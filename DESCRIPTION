    dplyr (>= 0.7.4),
    kimma,
    purrr (>= 0.2.4),
    RNAetc,
    rstudioapi (>= 0.7),
    SEARchways,
    tibble (>= 1.4.2)
Encoding: UTF-8
LazyData: true
